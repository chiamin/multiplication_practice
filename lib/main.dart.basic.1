class MultiplicationPracticePage extends StatefulWidget {
  const MultiplicationPracticePage({super.key});

  @override
  State<MultiplicationPracticePage> createState() =>
      _MultiplicationPracticePageState();
}

class _MultiplicationPracticePageState
    extends State<MultiplicationPracticePage> {
  final Random _random = Random();
  final TextEditingController _answerController = TextEditingController();
  final FocusNode _answerFocus = FocusNode();

  late int _a;
  late int _b;
  String _message = '';
  Color _messageColor = Colors.black;

  // Èü≥ÊïàÊí≠ÊîæÂô®
  final AudioPlayer _player = AudioPlayer();

  @override
  void initState() {
    super.initState();
    _generateNewQuestion();
  }

  @override
  void dispose() {
    _answerController.dispose();
    _answerFocus.dispose();
    _player.dispose();
    super.dispose();
  }

  void _generateNewQuestion() {
    setState(() {
      _a = 2 + _random.nextInt(8); // 2~9
      _b = 2 + _random.nextInt(8); // 2~9
      _answerController.clear();
      _message = '';
    });
  }

  Future<void> _checkAnswer() async {
    final text = _answerController.text.trim();
    if (text.isEmpty) {
      setState(() {
        _message = 'Ë´ãÂÖàËº∏ÂÖ•Á≠îÊ°à';
        _messageColor = Colors.orange;
      });
      return;
    }

    final int? value = int.tryParse(text);
    if (value == null) {
      setState(() {
        _message = 'Ë´ãËº∏ÂÖ•Êï¥Êï∏Âñî';
        _messageColor = Colors.orange;
      });
      return;
    }

    final correct = _a * _b;
    if (value == correct) {
      setState(() {
        _message = 'Á≠îÂ∞ç‰∫ÜÔºÅÂ§™Ê£í‰∫Ü üéâ';
        _messageColor = Colors.green;
      });

      // Êí≠ÊîæÁ≠îÂ∞çÈü≥Êïà (ding.mp3)
      try {
        await _player.play(
          AssetSource('sounds/ding.mp3'),
        );
      } catch (e) {
        debugPrint('Êí≠ÊîæÈü≥ÊïàÈåØË™§: $e');
      }

      // Êèõ‰∏ã‰∏ÄÈ°å
      await Future.delayed(const Duration(milliseconds: 600));
      _generateNewQuestion();
      _requestFocus();
    } else {
      setState(() {
        _message = 'Á≠îÈåØ‰∫ÜÔºåÂÜçË©¶Ë©¶ üôà  ';//Ê≠£Á¢∫Á≠îÊ°àÊòØ $correct';
        _messageColor = Colors.red;
      });
      _answerController.selection = TextSelection(
        baseOffset: 0,
        extentOffset: _answerController.text.length,
      );
      _requestFocus();
    }
  }

  void _requestFocus() {
    FocusScope.of(context).requestFocus(_answerFocus);
  }

  @override
  Widget build(BuildContext context) {
    final size = MediaQuery.of(context).size;
    final bool isTablet = size.shortestSide >= 600;

    final double questionFontSize = isTablet ? 60 : 36;
    final double inputFontSize = isTablet ? 32 : 24;
    final double buttonFontSize = isTablet ? 26 : 18;

    return Scaffold(
      appBar: AppBar(
        title: const Text('‰πòÊ≥ïÁ∑¥Áøí'),
        centerTitle: true,
      ),
      body: Center(
        child: ConstrainedBox(
          constraints: const BoxConstraints(maxWidth: 500),
          child: Padding(
            padding: const EdgeInsets.all(24.0),
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                Text(
                  '$_a √ó $_b = ?',
                  style: TextStyle(
                    fontSize: questionFontSize,
                    fontWeight: FontWeight.bold,
                  ),
                ),
                const SizedBox(height: 32),

                TextField(
                  controller: _answerController,
                  focusNode: _answerFocus,
                  keyboardType: TextInputType.number,
                  textAlign: TextAlign.center,
                  style: TextStyle(fontSize: inputFontSize),
                  decoration: const InputDecoration(
                    border: OutlineInputBorder(),
                    labelText: 'Ë´ãËº∏ÂÖ•Á≠îÊ°à',
                  ),
                  onSubmitted: (_) => _checkAnswer(),
                ),
                const SizedBox(height: 24),

                Row(
                  mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                  children: [
                    FilledButton(
                      onPressed: _checkAnswer,
                      child: Text(
                        'Ê™¢Êü•Á≠îÊ°à',
                        style: TextStyle(fontSize: buttonFontSize),
                      ),
                    ),
                    OutlinedButton(
                      onPressed: _generateNewQuestion,
                      child: Text(
                        'Êèõ‰∏ÄÈ°å',
                        style: TextStyle(fontSize: buttonFontSize),
                      ),
                    ),
                  ],
                ),

                const SizedBox(height: 24),

                if (_message.isNotEmpty)
                  Text(
                    _message,
                    style: TextStyle(
                      fontSize: isTablet ? 24 : 18,
                      color: _messageColor,
                    ),
                    textAlign: TextAlign.center,
                  ),
              ],
            ),
          ),
        ),
      ),
    );
  }
}

